<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/ui_bg_grey">

    <include layout="@layout/include_title_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/ui_margin_c"
        android:layout_marginBottom="@dimen/ui_margin_c"
        android:background="@color/ui_bg_white">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            >

            <ImageView
                android:id="@+id/pic"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="@dimen/ui_margin_c"
                android:scaleType="fitXY"
                android:layout_gravity="center_vertical"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:layout_margin="@dimen/ui_margin_c"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center_vertical"
                    android:text="海南特供荔枝"
                    android:textColor="@color/ui_font_b"
                    android:textSize="@dimen/ui_font_b"
                    android:textStyle="bold"
                    android:singleLine="false"
                    android:layout_weight="2"/>


            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ui_margin_d"
            android:layout_marginTop="@dimen/ui_margin_d"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/ui_margin_d"
                android:text="商品质量"
                android:textColor="@color/ui_font_c"
                android:textSize="@dimen/ui_font_c"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/rating_a"
                    android:layout_width="@dimen/ui_size_icon_c"
                    android:layout_height="@dimen/ui_size_icon_c"
                    android:layout_marginRight="@dimen/ui_margin_d"
                    android:src="@drawable/rating_star"
                    />

                <ImageView
                    android:id="@+id/rating_b"
                    android:layout_width="@dimen/ui_size_icon_c"
                    android:layout_height="@dimen/ui_size_icon_c"
                    android:layout_marginRight="@dimen/ui_margin_d"
                    android:src="@drawable/rating_star"
                    />

                <ImageView
                    android:id="@+id/rating_c"
                    android:layout_width="@dimen/ui_size_icon_c"
                    android:layout_height="@dimen/ui_size_icon_c"
                    android:layout_marginRight="@dimen/ui_margin_d"
                    android:src="@drawable/rating_star"
                    />

                <ImageView
                    android:id="@+id/rating_d"
                    android:layout_width="@dimen/ui_size_icon_c"
                    android:layout_height="@dimen/ui_size_icon_c"
                    android:layout_marginRight="@dimen/ui_margin_d"
                    android:src="@drawable/rating_star"
                    />

                <ImageView
                    android:id="@+id/rating_e"
                    android:layout_width="@dimen/ui_size_icon_c"
                    android:layout_height="@dimen/ui_size_icon_c"
                    android:src="@drawable/rating_star"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <EditText
        android:id="@+id/input"
        style="@style/Theme.EditText"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="top|left"
        android:hint="说点什么吧"
        android:inputType="text"
        android:textSize="@dimen/ui_font_c"
        />

    <LinearLayout
        android:id="@+id/images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ui_margin_f"
        android:orientation="vertical"
        >


        </LinearLayout>
</LinearLayout>