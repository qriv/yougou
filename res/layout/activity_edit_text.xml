<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/ui_bg_grey"
              android:orientation="vertical"
    >

    <include layout="@layout/include_title_bar"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/ui_margin_d"
        >

        <com.litesuits.android.widget.CustomEditText
            android:id="@+id/edit"
            style="@style/Theme.EditText"
            android:layout_width="match_parent"
            android:drawableRight="@drawable/button_erase"
            android:imeOptions="actionDone"
            android:inputType="text"
            />
    </RelativeLayout>
</LinearLayout>
