<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@color/ui_bg_white"
        android:gravity="center"
        android:orientation="vertical">

        <View
            android:id="@+id/top"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/ui_font_e"
            android:visibility="invisible" />

        <View
            android:id="@+id/circle"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@color/ui_font_e" />

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:background="@color/ui_font_e" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="@color/ui_bg_white"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="nothing"
            android:textColor="@color/ui_font_c"
            android:textSize="@dimen/ui_font_a" />

        <TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ui_margin_a"
            android:text="2015-03-12 13:00"
            android:textColor="@color/ui_font_c"
            android:textSize="@dimen/ui_font_a" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/ui_margin_a"
            android:background="@color/ui_divider_bg" />
    </LinearLayout>

</LinearLayout>