<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="60dp"
    >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="商品质量"
        android:gravity="center_vertical"
        android:padding="@dimen/ui_margin_d"
        android:textColor="@color/ui_font_c"
        android:textSize="@dimen/ui_font_c"
        />

    <ImageView
        android:id="@+id/rating_a"
        android:layout_width="@dimen/ui_size_icon_d"
        android:layout_height="@dimen/ui_size_icon_d"
        android:layout_marginRight="@dimen/ui_margin_d"
        android:src="@drawable/ui_star_stroke"
        android:layout_gravity="center_vertical"
        />

    <ImageView
        android:id="@+id/rating_b"
        android:layout_width="@dimen/ui_size_icon_d"
        android:layout_height="@dimen/ui_size_icon_d"
        android:layout_marginRight="@dimen/ui_margin_d"
        android:src="@drawable/ui_star_stroke"
        android:layout_gravity="center_vertical"
        />

    <ImageView
        android:id="@+id/rating_c"
        android:layout_width="@dimen/ui_size_icon_d"
        android:layout_height="@dimen/ui_size_icon_d"
        android:layout_marginRight="@dimen/ui_margin_d"
        android:src="@drawable/ui_star_stroke"
        android:layout_gravity="center_vertical"
        />

    <ImageView
        android:id="@+id/rating_d"
        android:layout_width="@dimen/ui_size_icon_d"
        android:layout_height="@dimen/ui_size_icon_d"
        android:layout_marginRight="@dimen/ui_margin_d"
        android:src="@drawable/ui_star_stroke"
        android:layout_gravity="center_vertical"
        />

    <ImageView
        android:id="@+id/rating_e"
        android:layout_width="@dimen/ui_size_icon_d"
        android:layout_height="@dimen/ui_size_icon_d"
        android:layout_marginRight="@dimen/ui_margin_d"
        android:src="@drawable/ui_star_stroke"
        android:layout_gravity="center_vertical"
        />

</LinearLayout>