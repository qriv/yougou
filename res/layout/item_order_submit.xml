<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="76dp"
              android:background="@color/ui_bg_white">

    <ImageView
        android:id="@+id/pic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="@dimen/ui_margin_c"
        android:layout_gravity="center_vertical"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="60dp"
        android:layout_margin="@dimen/ui_margin_c"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:text="海南特供荔枝"
            android:textColor="@color/ui_font_b"
            android:textSize="@dimen/ui_font_b"
            android:textStyle="bold"
            android:singleLine="false"
            android:layout_weight="2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:text="4.5斤"
            android:textColor="@color/ui_font_b"
            android:textSize="@dimen/ui_font_a"
            android:layout_weight="1"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/ui_margin_c"
        android:layout_gravity="center_vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/ui_font_red"
            android:textSize="@dimen/ui_font_a"
            android:gravity="right"
            android:text="￥88.00"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/ui_font_b"
            android:textSize="@dimen/ui_font_z"
            android:gravity="right"
            android:text="x1"/>
    </LinearLayout>
</LinearLayout>