<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ui_bg_white"
                android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        />


    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/label"
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:background="@color/basket_label_bg"
            android:gravity="center"
            android:text="菜\n篮"
            android:textColor="@color/ui_font_g"
            android:textSize="@dimen/ui_font_c"
            />


        <TextView
            android:id="@+id/type"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="-10dp"
            android:background="@drawable/circle_basket"
            android:gravity="center"
            android:textColor="@color/ui_font_g"
            android:textSize="@dimen/ui_font_g"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/picture"
        android:orientation="horizontal"
        android:padding="@dimen/ui_margin_d"
        >

        <TextView
            android:id="@+id/desc"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:textColor="@color/ui_font_c"
            android:textSize="@dimen/ui_font_b"
            />


        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="bottom|right"
                android:minWidth="25dp"
                android:textColor="@color/ui_font_green"
                android:textSize="@dimen/ui_font_d"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginBottom="3dp"
                android:gravity="bottom"
                android:text="元"
                android:textColor="@color/ui_font_a"
                android:textSize="@dimen/ui_font_a"
                />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>