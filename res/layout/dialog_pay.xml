<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/dialog_white"
              android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_title"
        android:gravity="center"
        android:padding="@dimen/ui_margin_d"
        android:text="人民优购支付"
        android:textColor="@color/ui_font_c"
        android:textSize="@dimen/ui_font_b"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/ui_margin_d"
            android:textColor="@color/ui_font_orange"
            android:textSize="@dimen/ui_font_b"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/ui_divider_bg"
            />

        <TextView
            android:id="@+id/molin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/ui_margin_d"
            android:text="账户余额"
            android:textColor="@color/ui_font_c"
            android:textSize="@dimen/ui_font_b"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/ui_divider_bg"
            />


        <LinearLayout
            android:id="@+id/wechat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/ui_margin_d"
                android:text="微信支付"
                android:textColor="@color/ui_font_c"
                android:textSize="@dimen/ui_font_b"
                />

            <View
                android:layout_width="10dp"
                android:layout_height="17dp"
                android:layout_marginRight="@dimen/ui_margin_d"
                android:background="@drawable/ui_right_arrow"
                />
        </LinearLayout>

        <View
            android:id="@+id/wechat_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/ui_divider_bg"
            android:visibility="gone"
            />

        <LinearLayout
            android:id="@+id/alipay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/ui_margin_d"
                android:text="支付宝支付"
                android:textColor="@color/ui_font_c"
                android:textSize="@dimen/ui_font_b"
                />

            <View
                android:layout_width="10dp"
                android:layout_height="17dp"
                android:layout_marginRight="@dimen/ui_margin_d"
                android:background="@drawable/ui_right_arrow"
                />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/action_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/ui_margin_a"
                android:visibility="gone"
                >

                <TextView
                    android:id="@+id/no_a"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ui_arc_button_gray_"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="@color/ui_font_c"
                    android:textSize="@dimen/ui_font_b"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/actions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/ui_margin_a"
                android:visibility="visible"
                >


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/ui_divider_bg"
                    />

                <EditText
                    android:id="@+id/input"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/ui_margin_d"
                    android:background="@drawable/ui_layout_bg_white_arc"
                    android:hint="人民优购支付密码"
                    android:inputType="textPassword"
                    android:paddingLeft="@dimen/ui_margin_d"
                    android:textColor="@color/ui_font_c"
                    android:textSize="@dimen/ui_font_b"
                    android:visibility="gone"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ui_margin_d"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >


                    <TextView
                        android:id="@+id/yes"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="@dimen/ui_margin_g"
                        android:background="@drawable/ui_arc_button_yellow"
                        android:gravity="center"
                        android:text="付款"
                        android:textColor="@color/ui_font_g"
                        android:textSize="@dimen/ui_font_b"
                        />


                    <TextView
                        android:id="@+id/no"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ui_arc_button_gray_"
                        android:gravity="center"
                        android:text="取消"
                        android:textColor="@color/ui_font_c"
                        android:textSize="@dimen/ui_font_b"
                        />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>