<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/ui_bg_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="@dimen/ui_margin_b"
            android:src="@drawable/ui_default_avatar"/>

        <TextView
            android:textColor="@color/ui_font_b"
            android:textSize="@dimen/ui_font_c"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="王亚瑟"/>

        <TextView
            android:textColor="@color/ui_font_d"
            android:textSize="@dimen/ui_font_a"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/ui_margin_d"
            android:text="2015-01-28 13:06:33"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/ui_divider_bg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginLeft="@dimen/ui_margin_b"
            android:layout_width="match_parent"
            android:layout_height="20dp">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ui_star_solid"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ui_star_solid"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ui_star_solid"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ui_star_stroke"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ui_star_stroke"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="@dimen/ui_margin_b"
            android:text="好吃好吃好吃好吃，吃了还想吃呢"
            android:textColor="@color/ui_font_b"
            android:gravity="center_vertical"
            android:textSize="@dimen/ui_font_a"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="@dimen/ui_margin_b"
            android:text="成交时间: 2015-01-26 12:32:55"
            android:textColor="@color/ui_font_d"
            android:gravity="center_vertical"
            android:textSize="@dimen/ui_font_z"/>
    </LinearLayout>
</LinearLayout>