<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/include_title_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ui_bg_grey"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ui_size_item_height_normal"
            android:layout_marginTop="@dimen/ui_margin_d"
            android:background="@color/ui_bg_white"
            android:hint="输入密码"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/ui_margin_d"
            android:textColor="@color/ui_font_c"
            android:textColorHint="@color/ui_font_f"
            android:textSize="@dimen/ui_font_d"
            />

        <EditText
            android:id="@+id/password_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ui_size_item_height_normal"
            android:layout_marginTop="@dimen/ui_margin_d"
            android:background="@color/ui_bg_white"
            android:hint="再次输入密码"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/ui_margin_d"
            android:textColor="@color/ui_font_c"
            android:textColorHint="@color/ui_font_f"
            android:textSize="@dimen/ui_font_d"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ui_margin_d"
            android:text="密码由6-20位英文字母和数字组成"
            android:textColor="@color/ui_font_f"
            android:textSize="@dimen/ui_font_a"
            />


    </LinearLayout>
</LinearLayout>