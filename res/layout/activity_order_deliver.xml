<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <include layout="@layout/include_title_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ui_bg_grey"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ui_margin_d"
                android:background="@color/ui_bg_white"
                android:orientation="vertical"
                android:padding="@dimen/ui_margin_d"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付方式"
                    android:textColor="@color/ui_font_c"
                    android:textSize="@dimen/ui_font_c"
                    />

                <LinearLayout
                    android:id="@+id/pay_method"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ui_margin_d"
                    android:orientation="horizontal"
                    ></LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ui_margin_d"
                android:background="@color/ui_bg_white"
                android:orientation="vertical"
                android:padding="@dimen/ui_margin_d"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="配送方式"
                    android:textColor="@color/ui_font_c"
                    android:textSize="@dimen/ui_font_c"
                    />

                <LinearLayout
                    android:id="@+id/deliver_method"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ui_margin_d"
                    android:orientation="vertical"
                    ></LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:id="@+id/layout_normal_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ui_margin_d"
                    android:background="@color/ui_bg_white"
                    android:orientation="vertical"
                    android:padding="@dimen/ui_margin_d"
                    android:visibility="gone"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="普通商品送货时间"
                        android:textColor="@color/ui_font_c"
                        android:textSize="@dimen/ui_font_c"
                        />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/normal_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/ui_font_c"
                            android:textSize="@dimen/ui_font_c"
                            />

                        <Button
                            android:id="@+id/change_normal_time"
                            android:layout_width="60dp"
                            android:layout_height="30dp"
                            android:background="@drawable/ui_arc_button_yellow"
                            android:text="修改"
                            android:textColor="@color/ui_font_g"
                            android:textSize="@dimen/ui_font_b"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/deliver_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ui_margin_d"
                        android:orientation="vertical"
                        ></LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_order_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ui_margin_d"
                    android:background="@color/ui_bg_white"
                    android:orientation="vertical"
                    android:padding="@dimen/ui_margin_d"
                    android:visibility="gone"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="预售商品送货时间"
                        android:textColor="@color/ui_font_c"
                        android:textSize="@dimen/ui_font_c"
                        />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/order_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/ui_font_c"
                            android:textSize="@dimen/ui_font_c"
                            />

                        <Button
                            android:id="@+id/change_order_time"
                            android:layout_width="60dp"
                            android:layout_height="30dp"
                            android:background="@drawable/ui_arc_button_yellow"
                            android:text="修改"
                            android:textColor="@color/ui_font_g"
                            android:textSize="@dimen/ui_font_b"/>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>