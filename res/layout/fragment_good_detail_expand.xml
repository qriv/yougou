<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ui_bg_grey"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_size_item_height_normal"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:id="@+id/picture"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/ui_bg_white"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="图文详情"
                android:textColor="@color/ui_font_c"
                android:textSize="@dimen/ui_font_b"

                />

            <View
                android:id="@+id/picture_indicator"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="#0ebd1b"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/parameter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/ui_bg_white"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="产品参数"
                android:textColor="@color/ui_font_c"
                android:textSize="@dimen/ui_font_b"

                />

            <View
                android:id="@+id/parameter_indicator"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="#0ebd1b"
                android:visibility="invisible"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/service"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/ui_bg_white"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="售后服务"
                android:textColor="@color/ui_font_c"
                android:textSize="@dimen/ui_font_b"

                />

            <View
                android:id="@+id/service_indicator"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="#0ebd1b"
                android:visibility="invisible"
                />
        </RelativeLayout>

    </LinearLayout>

    <WebView
        android:id="@+id/web"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/ui_margin_d"
        android:layout_weight="1"
        android:scrollbars="none"
        ></WebView>

</LinearLayout>